{
  "env": {
    "es6": true,
    "node": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "sourceType": "module"
  },
  "rules": {
    "eqeqeq": 1,
    "curly": 2,
    "eol-last": 2,
    "no-trailing-spaces": 2,
    "no-multi-spaces": 2,
    "comma-dangle": ["error", "never"],
    "max-len": ["error", {
      "code": 100,
      "comments": 100
    }],
    "no-multiple-empty-lines": [1, { "max": 1, "maxEOF": 1 }],
    "no-magic-numbers": 0,
    "indent": ["error", 2],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "single"],
    "semi": ["error", "always"]
  }
}
